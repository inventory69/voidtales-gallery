{
  "name": "voidtales-gallery",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "watch:images": "npx nodemon --watch public/images/original --watch src/content/photos --exec \"pnpm run gen:imagejson\"",
    "predev": "pnpm run gen:imagejson",
    "dev": "concurrently \"pnpm run watch:images\" \"astro dev\"",
    "dev-host": "concurrently \"pnpm run watch:images\" \"astro dev --host\"",
    "start": "astro dev",
    "prebuild": "pnpm run gen:imagejson",
    "build": "pnpm run gen:thumbs && astro check && astro build --jobs 1",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check && biome check",
    "check:fix": "astro check && biome check --write",
    "stylelint": "stylelint '**/*.{astro,css}'",
    "stylelint:fix": "stylelint '**/*.{astro,css}' --fix",
    "gen:thumbs": "node scripts/generate-thumbs.js",
    "copy:md-files": "node scripts/copy-md-files.cjs",
    "copy:original-images": "node scripts/copy-original-images.cjs",
    "gen:imagejson": "node scripts/generate-images.js"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/preact": "^4.1.1",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.14.3",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "glightbox": "^3.3.1",
    "preact": "^10.27.2",
    "smartypants": "^0.2.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "sharp": "^0.34.4",
    "stylelint": "^16.25.0",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-standard": "^39.0.1"
  }
}
