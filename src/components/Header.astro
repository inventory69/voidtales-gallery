---
// filepath: /home/liq/voidtales-gallery/src/components/Header.astro
import ThemeToggle from '../components/ThemeToggle.jsx';
import { siteConfig } from '../config/site.js';
import { navigationLinks } from '../config/navigation.js';
---
<header class="site-header" role="banner">
  <div class="site-header-inner container">
    <!-- Logo links -->
    <div class="brand">
      <a href="/" class="logo">{siteConfig.name}</a>
    </div>

    <!-- Navigation links rechts -->
    <nav class="header-nav" role="navigation" aria-label="Main navigation">
      {navigationLinks.map(link => (
        <a href={link.href} class="nav-link">{link.label}</a>
      ))}
    </nav>

    <!-- Mobile menu button and Theme Toggle -->
    <div class="header-actions">
      <button
        id="mobile-menu-toggle"
        class="mobile-menu-btn"
        aria-label="Toggle menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <ThemeToggle client:load />
    </div>
  </div>

  <!-- Mobile menu dropdown -->
  <div id="mobile-menu" class="mobile-menu">
    <nav class="mobile-nav" role="navigation" aria-label="Mobile navigation">
      {navigationLinks.map(link => (
        <a href={link.href} class="nav-link">{link.label}</a>
      ))}
    </nav>
    <div class="mobile-actions">
      <ThemeToggle client:load />
    </div>
  </div>
</header>

<script>
  // Einfaches JS für Mobile-Menü (ohne Framework)
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('open');
      });
    }
  });
</script>