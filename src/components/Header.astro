---
import ThemeToggle from '../components/ThemeToggle.jsx';
import RefreshButton from '../components/RefreshButton.astro';
import SortSelector from '../components/SortSelector';
import { siteConfig } from '../config/site.js';
import { navigationLinks } from '../config/navigation.js';
---
<header class="site-header" role="banner">
  <div class="site-header-inner container">
    <!-- Brand logo -->
    <div class="brand">
      <a href="/" class="logo">{siteConfig.name}</a>
    </div>

    <!-- Main navigation links -->
    <nav class="header-nav" role="navigation" aria-label="Main navigation">
      {navigationLinks.map(link => (
        <a href={link.href} class="nav-link">{link.label}</a>
      ))}
    </nav>

    <!-- Header actions: desktop only (SortSelector hidden on mobile via CSS) -->
    <div class="header-actions">
      <SortSelector defaultSort={siteConfig.defaultSort} client:load />
      <RefreshButton />
      <button
        id="mobile-menu-toggle"
        class="mobile-menu-btn"
        aria-label="Toggle menu"
      >
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2"
          stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <ThemeToggle client:load />
    </div>
  </div>
</header>